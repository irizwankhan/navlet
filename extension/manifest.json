{
  "name": "navlet",
  "description": "Add scroll to top button on any page",
  "version": "1.0",
  "manifest_version": 3,
  "action": {},
  "icons": {
    "16": "/img/navlet-16.png",
    "32": "/img/navlet-32.png",
    "48": "/img/navlet-48.png",
    "128": "/img/navlet-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["navlet.js"]
    }
  ]
}
